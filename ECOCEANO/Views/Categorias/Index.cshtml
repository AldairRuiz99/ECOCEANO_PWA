@model IEnumerable<Categorias>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Categorías";
}

<div class="row" style="margin-top: 60px;">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="row justify-content-md-center">
                    <div class="col-md-12">
                        <section id="nuevaCategoria" class="mb-2">
                            <a id="btnNuevo" class="btn btn-success" asp-controller="Categorias" asp-action="Registro">
                                <i class=" fa fa-file"></i> Nuevo
                            </a>
                        </section>
                        @if (ViewData.ModelState.IsValid == false)
                        {
                            <div class=" alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>Error</strong> @Html.ValidationMessage("ErrorCategoria")
                                <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                    <span aria-hidden="true" &times;></span>
                                </button>
                            </div>
                        }
                        <section id="ListaCategorias">
                            <table class="table table-striped table-borderless">
                                <thead class=" thead-light">
                                    <tr>

                                        <th scope="col">Categoría</th>
                                        <th scope="col">Estatus</th>
                                        <th scope="col">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var categorias in Model)
                                    {
                                        <tr>
                                            <th scope="row">@Html.DisplayFor(model => categorias.nombre)</th>
                                            <td>@Html.DisplayFor(model => categorias.estatus)</td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="Editar" asp-route-id="@categorias.ID">
                                                    <i class="fas fa-edit"></i>Editar
                                                </a>
                                                <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@categorias.ID">
                                                    <i class="fas fa-trash"></i>Eliminar
                                                </a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </section>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



