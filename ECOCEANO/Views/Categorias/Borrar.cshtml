@model Categorias
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Borrar Categoría";
}

<div class="row" style="margin-top: 60px;">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="row justify-content-md-center">
                    <div class="col-md-12 text-center">
                        <h3 class=" text-danger">¿Estás seguro de eliminar la categoría @Html.DisplayFor(model => model.nombre)?</h3>
                    </div>
                    <div class="col-md-12 text-center">

                        <form asp-action="Eliminar">
                            <input type="hidden" asp-for="ID" />
                            <input type="submit" value="Aceptar" class="btn btn-primary" />
                            <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
