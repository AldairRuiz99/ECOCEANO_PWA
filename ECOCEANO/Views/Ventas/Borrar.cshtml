@model Ventas
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Borrar";
}

<div class="row" style="margin-top: 60px;">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="row justify-content-md-center">
                    <div class="col-md-12 text-center">
                        <h3 class=" text-danger">¿Estás seguro de eliminar el registro?</h3>
                    </div>
                    <div class="col-md-12 text-center">
                        <dl class=" row text-center">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Articulos)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Articulos)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.MontoTotal)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.MontoTotal)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.estatus)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.estatus)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-12 text-center">

                        <form asp-action="Eliminar">
                            <input type="hidden" asp-for="ID" />
                            <input type="submit" value="Aceptar" class="btn btn-primary" />
                            <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>